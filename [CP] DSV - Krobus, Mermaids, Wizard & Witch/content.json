	"ConfigSchema":
	{
		// Full, Lightweight, or Ultralightweight Toggle
		
		// Variant Toggles
		"KrobusVariant":
		{
			"AllowValues": "Modded, off",
			"Default": "Modded",
		},
		"KrobusLightweightConfig":
		{
			"AllowValues": "Full, Light",
			"Default": "Full",
			"Description": "Toggles whether Krobus will have the full range of Diverse Stardew Valley's features or a lightweight selection to reduce lag. Check the website for more info.",
		},
		"Mermaids":
		{
			"AllowValues": "RandomBoth, RandomUpper, RandomLower, Light, off",
			"Default": "RandomBoth",
			"Description": "Randomizes the appearance of the mermaids who appear in the game. The 'Light' option will change the mermaids to a pre-selected mix.",
		},
		"WitchVariant":
		{
			"AllowValues": "Modded, off",
			"Default": "off",
		},
		"WizardVariant":
		{
			"AllowValues": "Vanilla, Modded, off",
			"Default": "Vanilla",
		},
		"WizardLightweightConfig":
		{
			"AllowValues": "Full, Light",
			"Default": "Full",
			"Description": "Toggles whether the Wizard will have the full range of Diverse Stardew Valley's features or a lightweight selection to reduce lag. Check the website for more info.",
		},
		"WizardFamiliars":
		{
			"AllowValues": "HatJunimos, ShoulderJunimos, SpiritCreatures",
			"AllowBlank": true,
			"AllowMultiple": true,
			"Description": "Gives the Wizard some spirit familiars who hang around him. Can't be used if WizardLightweightConfig option is set to 'light'.",
		},
		"WizardMarriageMod":
		{
			"AllowValues": "LookingForLove, RomanceableRasmodius, None",
			"Default": "None",
			"Description": "If you are using a mod to romance the Wizard, select which one you are using here. Note: DSV does not support SVE's Wizard romance option.",
		},	
		"MermaidPendants":
		{
			"AllowValues": "true, false",
			"Default": "true",
			"Description": "Toggles whether or not your fiance/spouse will wear a mermaid pendant after getting engaged or married. Can't be used if a character's LightweightConfig option is set to 'light'.",
		},
	},
